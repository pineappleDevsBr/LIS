<div class="row">
  @each(item in themes)
    <div class="col-md-5">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
          <strong class="card-title mb-0 mr-2">{{ item.name }}</strong>
          <div class="d-flex">
            <a href="{{ route('admin.themes.update') }}/{{ item.id }}" class="btn btn-outline-primary btn-sm mr-2">Update</a>
            <form action="{{ route('admin.themes.delete') }}" method="post">
              <input type="hidden" name="id" value="{{ item.id }}">
              <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
            </form>
          </div>
        </div>
        <div class="card-body">
          <p class="card-text">{{ item.description }}</p>
        </div>
      </div>
  </div>
  @endeach
</div>