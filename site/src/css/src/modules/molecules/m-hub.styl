.m-hub_card {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.m-hub_profile {
  display: flex;
  align-items: flex-start;
}

.m-hub_avatar {
  border-radius: 50%;
  margin-right rem(10);
}

.m-hub_username {
  font-size: rem(18);
  font-weight: $fontweight.bold;
  line-height: 1;
  margin-top: rem(5);
  margin-bottom: rem(5);
}

.m-hub_level,
.m-hub_xp {
  font-size: rem(14);
  margin-top: 0;
  margin-bottom: 0;
}

.m-hub_course {
  max-width: rem(35);
  width: 100%;
  margin-top: rem(-6);
}