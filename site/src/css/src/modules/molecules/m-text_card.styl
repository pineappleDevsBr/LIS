.m-text_tabs {
  margin-bottom: em(20);
  color: $primary;
}

.m-text_tab {
  font-size: em(22);
}

.m-text_card {
  display: flex;
  justify-content: space-between;

  &.-no-padding-top {
    padding-top: 0;
  }
  &.-no-padding-bottom {
    padding-bottom: 0;
  }
}

.m-text_title,
.m-text_xp {
  font-weight: $fontweight.bold;
  font-size: em(18);
}

.m-text_xp {
  color: $accent;
}