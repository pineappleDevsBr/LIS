.m-cards {
  display: flex;
  flex-wrap: wrap;

  .m-card {
    min-width: 130px;
    &:not(:last-child) {
    margin-right: 20px;
  }

  &:nth-child(2n) {
    margin-right: 0;
  }
  }
}

.m-card {
  border-radius: 20px;
  box-shadow: 0px 5px 20px -5px rgba(0,0,0,0.20);
  margin-bottom: rem(20);
  flex-grow: 1;
}
