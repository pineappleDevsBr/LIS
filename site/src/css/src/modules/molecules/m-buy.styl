.m-buy {
  padding: rem(5);
}

.m-buy_cash {
  display: flex;
  font-size: rem(18);
  font-weight: $fontweight.bold;
  justify-content: flex-end;
  align-items: center;
}

.m-buy_cash-icon {
  max-width: rem(25);
  margin-left: rem(10);
}

.m-buy_product {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.m-buy_product-name {
  font-size: rem(26);
  font-weight: $fontweight.bold;
  color: $primary;
  line-height: 1;
  margin-top: 0;
  margin-bottom: 0;
}

.m-buy_product_icon {
  max-width: 150px;
  margin-top: rem(20);
  margin-bottom: rem(20);
}

.m-buy_product_description {
  font-size: rem(18);
  line-height: 1;
  margin-top: 0;
  margin-bottom: 0;
}

.m-buy_add,
.m-buy_value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: rem(18);
}

.m-buy_add-btn {
  background: $primary;
  color: $white;
  margin-left: rem(20);
}