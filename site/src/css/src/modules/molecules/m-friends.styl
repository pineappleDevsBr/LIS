.m-friends_search {
  display: flex;
}

.m-friends_search-btn {
  color: $primary;
  text-decoration: underline;
  font-size: em(16);
  line-height: 1;
}

.m-friends_title {
  font-weight: $fontweight.bold;
  font-size: em(26);
  line-height: 1;
  margin-top: 0;
  margin-bottom: em(30, 26);
}

.m-friends_card {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.m-friends_profile {
  display: flex;
  align-items: flex-start;
}

.m-friends_avatar {
  border-radius: 50%;
  margin-right em(10);
}

.m-friends_username {
  font-size: em(18);
  font-weight: $fontweight.bold;
  line-height: 1;
  margin-top: em(5);
  margin-bottom: em(5);
}

.m-friends_level,
.m-friends_xp {
  font-size: em(14);
  margin-top: 0;
  margin-bottom: 0;
}

.m-friends_nationality {
  max-width: em(50);
  width: 100%;
  margin-top: em(-6);
}

.m-friends_level-spotlight,
.m-friends_xp-spotlight,
 {
  font-weight: $fontweight.bold;
  color: $primary;
  text-align: center;
  line-height: 1;
  margin-top: 0;
}

.m-friends_level-spotlight {
  font-size: em(40);
  margin-bottom: em(10);
}

.m-friends_xp-spotlight {
  font-size: em(28);
  margin-bottom: 0;
}

.m-friends_card-course {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  max-height: em(80);
}

.m-friends_course-flag {
  width: em(65);
  margin-top: em(6);
  margin-right: em(10);
}

.m-friends_confirm {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: em(10);
}

.m-friends_confirm-btn:first-child {
  margin-right: em(10);
}

.m-friends_invite-ilustra {
  max-width: em(450);
}

.m-friend_invite {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.m-friends_invite-copy {
  font-size: em(20);
  margin-bottom: em(15, 20);

  & .-link {
    color: $primary;
  }
}