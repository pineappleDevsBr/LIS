.m-friends_card {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.m-friends_profile {
  display: flex;
  align-items: flex-start;
}

.m-friends_avatar {
  border-radius: 50%;
  margin-right rem(10);
}

.m-friends_username {
  font-size: rem(18);
  font-weight: $fontweight.bold;
  line-height: 1;
  margin-top: rem(5);
  margin-bottom: rem(5);
}

.m-friends_level,
.m-friends_xp {
  font-size: rem(14);
  margin-top: 0;
  margin-bottom: 0;
}

.m-friends_course {
  max-width: rem(35);
  width: 100%;
  margin-top: rem(-6);
}

.m-friends_level-spotlight,
.m-friends_xp-spotlight,
.m-friends_title {
  font-weight: $fontweight.bold;
  color: $primary;
  text-align: center;
  line-height: 1;
  margin-top: 0;
}

.m-friends_level-spotlight {
  font-size: rem(40);
  margin-bottom: rem(10);
}

.m-friends_xp-spotlight {
  font-size: rem(28);
  margin-bottom: 0;
}

.m-friends_title {
  font-size: rem(22);
  text-align: left;
}

.m-friends_card-course {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  max-height: rem(80);
}

.m-friends_course-flag {
  width: rem(65);
  margin-top: rem(6);
  margin-right: rem(10);
}