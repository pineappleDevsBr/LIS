.m-store_price {
  font-size: em(18);
  font-weight: $fontweight.bold;
  color: $primary
  margin-bottom: em(5);
  height: 25px;
  display: flex;
  align-items: center;
}

.m-store_coin {
  margin-left: em(5);
  max-width: em(18);
}

.m-store_box-product {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: em(5) 0;
}

.m-store_icon {
  max-width: em(60);
}

.m-store_title {
  margin-top em(10);
  margin-bottom em(10);
  line-height: 1;
  font-size: em(14);
  font-weight: $fontweight.bold;
}

.m-store_product {
  display: flex;
  align-items: center;
}

.m-store_product-question {
  color: $primary;
  cursor: pointer;
  margin-left: em(5);
}

.m-store_product-info {
  background: $white;
  color: $black;
}