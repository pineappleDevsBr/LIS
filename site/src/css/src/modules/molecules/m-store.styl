.m-store_price {
  font-size: rem(18);
  font-weight: $fontweight.bold;
  color: $primary
  margin-bottom: rem(5);
  height: 25px;
  display: flex;
  align-items: center;
}

.m-store_coin {
  margin-left: rem(5);
  max-width: rem(18);
}

.m-store_box-product {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: rem(5) 0;
}

.m-store_icon {
  max-width: rem(60);
}

.m-store_title {
  margin-top rem(10);
  margin-bottom rem(10);
  line-height: 1;
  font-size: rem(14);
  font-weight: $fontweight.bold;
}

.m-store_product {
  display: flex;
  align-items: center;
}

.m-store_product-question {
  color: $primary;
  cursor: pointer;
  margin-left: rem(5);
}

.m-store_product-info {
  background: $white;
  color: $black;
}