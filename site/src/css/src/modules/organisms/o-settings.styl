.o-settings {
  background: $white;
  height: 100%;
  padding: rem(20);
}

.o-settings_header {
  background: $primary
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: rem(45);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: rem(20);
  padding-right: rem(5);
  color: $white;
}

.o-settings_title {
  line-height: 1;
  margin-top: 0;
  margin-bottom: 0;
  font-size: rem(22);
  font-weight: $fontweight.bold;
}

.o-settings_account {
  margin-top: rem(50);
}