.o-header {
  font-size: 1rem;
  max-width em(526);

  &::before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    bottom: em(-39);
    width: em(40);
    height: em(40);
    background: url('~assets/header/border.svg');
    background-size: cover;
  }
}

.o-header_head {
  display: flex;
  align-items: center;
  width: 100%;
  min-height: em(70);
  max-height: em(70);
  padding: em(20) em(20) 0;
}

.o-header_title {
  font-size: em(30);
  font-weight: $fontweight.bold;
}

.o-header_menu {
  padding: em(10) em(20);
  padding-left: em(80);
  overflow: hidden;
  width: 100%;
}

.o-header_menu-slide.swiper-slide {
  width: auto;
  height: auto;
}

.o-header_menu-item {
  color: $white;
  text-decoration: none;
  font-size: em(18);
  // transform: translateZ(0) scale(0.95);
  padding: 0 em(8);
  transition: transform .3s ease;
  transform-origin: center;
  display: block;

  &.-active {
    font-weight: $fontweight.bold;
  }
}

.o-header_money {
  display: flex;
  height: em(30);
  align-items: center;
}

.o-header_coin {
  max-width: em(20);
  margin-right: em(20);
  margin-left: em(10);
}

.o-header_settings,
.o-header_add-friends {
  margin-right: 0;
  height: em(35);
}