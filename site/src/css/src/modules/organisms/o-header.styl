.o-header {
  font-size: 1rem;
  max-width em(526);
}

.o-header_border {
  position: absolute;
  width: 60px;
  height: 60px;
  margin-top: -1px;

  & svg {
    width: 100%;
    height: 100%;
  }

  & .fill {
    fill: $primary;
  }
}

.o-header_head {
  display: flex;
  align-items: center;
  width: 100%;
  min-height: em(70);
  max-height: em(70);
  padding: em(20) em(20) 0;
}

.o-header_title {
  font-size: em(30);
  font-weight: $fontweight.bold;
}

.o-header_menu {
  padding: em(10) em(20);
  padding-left: em(50);
  overflow: hidden;
  width: 100%;
}

.o-header_menu-slide.swiper-slide {
  width: auto;
  height: auto;
}

.o-header_menu-item {
  color: $white;
  text-decoration: none;
  font-size: em(18);
  padding: 0 em(8);
  transition: transform .3s ease;
  transform-origin: center;
  display: block;

  &.-active {
    font-weight: $fontweight.bold;
  }
}

.o-header_settings,
.o-header_add-friends {
  margin-right: 0;
  height: em(35);
}