.o-withoutInternet {
  font-size: 1rem;
  background: url('~assets/without-internet/without-internet.png') no-repeat;
  background-size: contain;
  background-position: center bottom;
  padding-bottom: em(310);
}
.o-withoutInternet_title {
  font-size: em(60);
  margin-bottom: em(40, 60);
}

.o-withoutInternet_text {
  font-size: em(24);
}

@media only screen and (max-width: $media.mb) {
  .o-withoutInternet {
    padding-bottom: em(250);
  }
}

@media only screen and (min-width: $media.xs) {
  .o-withoutInternet {
    background-size: initial;
    padding-bottom: em(280);
  }
}